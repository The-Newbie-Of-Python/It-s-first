s1 = 0
s2 = 0
s = 0
for i in range(100) :
    if i % 3 == 0 :
        print("被3整除",i)
        s1 = s1 + i
    
    if i % 5 == 0 and i % 3 != 0 :
        print("被5整除",i)
        s2 = s2 + i    

s = s1 + s2

print("被3和5整除的数求和：",s)    



#######################################
#优化
#######################################

