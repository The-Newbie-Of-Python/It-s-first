#sum求和函数
n = []
for i in range(1,1000):
    if i % 3 == 0 or i % 5 == 0:
        n.append(i)
print(n)
print(sum (n))


#列表解析
n = []
[ n.append(i) for i in range(1,100000000) if i%3==0 or i%5==0 ]
print(sum(n))


#生成表达式
print(sum( i for i in range(1,100000000) if i%3==0 or i%5==0 )


